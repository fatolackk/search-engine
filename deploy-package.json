{
  "name": "nexus-search-engine",
  "version": "1.0.0",
  "description": "Modern cyberpunk search engine with TrustPositif filtering",
  "main": "server.ts",
  "scripts": {
    "dev": "nodemon --exec \"npx tsx server.ts\" --watch server.ts --watch src --ext ts,tsx,js,jsx 2>&1 | tee dev.log",
    "build": "next build",
    "start": "NODE_ENV=production tsx server.ts 2>&1 | tee server.log",
    "lint": "next lint",
    "export": "next build && next export",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "search-engine",
    "cyberpunk",
    "nextjs",
    "typescript",
    "trustpositif",
    "penulis4d",
    "nexus"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nexus-search-engine.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/nexus-search-engine/issues"
  },
  "homepage": "https://github.com/yourusername/nexus-search-engine#readme"
}